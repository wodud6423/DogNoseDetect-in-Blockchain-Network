<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundlist01"
    android:alpha="0.6"
    tools:context=".MainHomePage"
    android:id="@+id/mainhomepage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:text="블록체인DB \n 강아지 비문 조회 서비스"
        android:textSize="50sp"
        android:fontFamily="@font/kyoboson"
        android:textColor="#EE00EE"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        tools:layout_editor_absoluteY="134dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main_register"
        android:drawableLeft="@drawable/ic_dog"
        android:fontFamily="@font/kyoboson"
        android:text="로그인"
        android:textSize="32sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="425dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="110dp"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main_register"
        android:drawableLeft="@drawable/ic_dog"
        android:fontFamily="@font/kyoboson"
        android:text="회원가입"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>