<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MyPetRegisterActivity">

    <ImageView
        android:id="@+id/iv_pre_checkinfo"
        android:layout_width="256dp"
        android:layout_height="190dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.925"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/PetNamecheckinfo"
        android:layout_width="321dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Name : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="start"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/iv_pre_checkinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/Pettypecheckinfo"
        android:layout_width="321dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Type : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="start"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/PetNamecheckinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/Petgendercheckinfo"
        android:layout_width="321dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Gender : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="start"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/Pettypecheckinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/PetPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Price : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="start"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/Petgendercheckinfo"
        app:layout_constraintStart_toStartOf="@+id/Petgendercheckinfo"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="101dp"/>

    <TextView
        android:id="@+id/PetOwnercheckinfo"
        android:layout_width="321dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Owner Email : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="start"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/PetPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="101dp"/>

    <Button
        android:id="@+id/Adopt_Request"
        style="@style/defaultButton"
        android:layout_width="110dp"
        android:layout_height="68dp"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="28dp"
        android:text="분양 예약"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/Cancel_and_gobeforepage"
        style="@style/defaultButton"
        android:layout_width="110dp"
        android:layout_height="68dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="28dp"
        android:text="이전 페이지 이동"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>